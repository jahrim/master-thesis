{
  // Build
  "latex-workshop.latex.outDir": "%WORKSPACE_FOLDER%/build",
  // Grammar
  "ltex.language": "en-GB",
  "ltex.additionalRules.enablePickyRules": true,
  "ltex.dictionary": {
    "en-GB": [
      "FRASP",
      "Rx",
      "stigmergy",
      "nbr",
      "multidirectionality",
      "declarativity",
      "transparence",
      "switchS",
      "switchC",
      "CellLoop",
      "StreamLoop",
      "CellSink",
      "StreamSink",
      "mixin",
      "mixins",
      "nbrvar",
      "foldhood",
      "ScaFi",
      "mux",
      "dinamicity"
    ]
  },
  // Formatting
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.rulers": [
    80
  ],
  "editor.formatOnSave": true,
  "latex-workshop.latexindent.args": [
    "-cruft=%WORKSPACE_FOLDER%/.latexindent/",
    "-local=%WORKSPACE_FOLDER%/latexindent.yaml",
    "-modifylinebreaks",
    "--overwriteIfDifferent",
    "%TMPFILE%"
  ]
}